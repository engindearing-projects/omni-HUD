<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fadeScrollbars="false"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Dashboard Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="OmniHUD Dashboard"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/heading_yellow" />

            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_preferences"
                android:contentDescription="Settings" />

            <ImageButton
                android:id="@+id/btnHelp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_info_details"
                android:contentDescription="Help" />

        </LinearLayout>

        <!-- HUD Connection Status Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/new_dark_button_bg"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HUD Connection"
                android:textSize="14sp"
                android:textColor="@color/heading_yellow"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textSize="12sp"
                    android:textColor="#AAAAAA"
                    android:paddingEnd="8dp" />

                <TextView
                    android:id="@+id/txtConnectionStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Not Connected"
                    android:textSize="16sp"
                    android:textColor="#FF6B6B"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtDeviceInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No device connected"
                android:textSize="11sp"
                android:textColor="#888888"
                android:paddingTop="4dp" />

        </LinearLayout>

        <!-- HUD Device Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/new_dark_button_bg"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device Selection"
                android:textSize="14sp"
                android:textColor="@color/heading_yellow"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerHUDDevices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:spinnerMode="dropdown" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnConnect"
                    style="@style/darkButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Connect"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnDisconnect"
                    style="@style/darkButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Disconnect"
                    android:enabled="false" />

            </LinearLayout>

        </LinearLayout>

        <!-- Data Streaming Configuration -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Streaming"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/new_dark_button_bg"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stream Type"
                android:textSize="12sp"
                android:textColor="@color/heading_yellow"
                android:paddingBottom="4dp" />

            <Spinner
                android:id="@+id/spinnerStreamType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Rate"
                android:textSize="12sp"
                android:textColor="@color/heading_yellow"
                android:paddingBottom="4dp" />

            <Spinner
                android:id="@+id/spinnerUpdateRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:padding="12dp"
                android:layout_marginBottom="12dp"
                android:spinnerMode="dropdown" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchEnableStreaming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable Data Streaming"
                android:textColor="@color/white"
                android:textOn="ON"
                android:textOff="OFF"
                android:enabled="false" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginBottom="16dp" />

        <!-- HUD Preview Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device Status"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/new_dark_button_bg"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/txtHUDPreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:text="No data being streamed to HUD"
                android:textSize="12sp"
                android:textColor="#888888"
                android:fontFamily="monospace"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginBottom="16dp" />

        <!-- Advanced Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advanced"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/btnRefreshDevices"
            style="@style/darkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refresh USB Devices"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnTestConnection"
            style="@style/darkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Test Data"
            android:layout_marginBottom="8dp"
            android:enabled="false" />

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OmniHUD v0.1 - USB-C HUD Integration for ATAK"
            android:textSize="10sp"
            android:textColor="#666666"
            android:textAlignment="center"
            android:paddingTop="16dp" />

    </LinearLayout>

</ScrollView>
